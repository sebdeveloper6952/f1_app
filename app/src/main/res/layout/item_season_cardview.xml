<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_season_card_height"
    android:layout_margin="@dimen/item_season_card_margin"
    card_view:cardCornerRadius="@dimen/item_season_card_corner_radius"
    card_view:cardElevation="@dimen/item_season_card_elevation">

    <TextView
        android:id="@+id/txtView_seasonYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem" />

</android.support.v7.widget.CardView>